




<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>

        <div class="form">
            <div class="form__item">
                {{>field action="signupForm.change" label="Ел. адреса" type="email" name="email" placeholder="Ваш e-mail"}}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password action="signupForm.change" label="Пароль" name="password" placeholder="Введіть пароль"}}
                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-password action="signupForm.change" label="Пароль ще раз" name="password" placeholder="Введіть пароль"}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-select action="signupForm.change" label="Роль" name="role" placeholder="Оберіть роль" list=data.role}}
                <span name="role" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{>field-checkbox action="signupForm.change" label="Ви погоджуєтуся з правилами сервіса" name="isConfirm"}}
                <span name="isConfirm" class="form__error">Помилка</span>
            </div>
        </div>

        <button onClick="signupForm.submit()" class="button" type="button">Зареєструватися</button>

        <span class="alert alert--disabled">Внимание, ошибка!</span>

        <span class="link__prefix">Маєте акаунт? <a href="/login" class="link">Увійти</a></span>

    </form>
</div>